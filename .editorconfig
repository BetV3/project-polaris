root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,hpp,h,c,cc,cxx}]
indent_style = space
indent_size = 4

[*.{py,yml,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2